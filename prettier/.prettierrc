{
  "trailingComma":             "es5",
  "semi":                      false,
  "singleQuote":               true,
  "jsxSingleQuote":            true,
  "arrowParens":               "always",
  "printWidth":                80,
  "bracketSameLine":           true,
  "singleAttributePerLine":    true,
  "importOrder":               [
    "^expo(.*)$",
    "^react(.*)$",
    "^@my/(.*)$",
    "^app/(.*)$",
    "^ui/(.*)$"
  ],
  "importOrderSeparation":     true,
  "importOrderSortSpecifiers": true,
  "plugins":                   ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
